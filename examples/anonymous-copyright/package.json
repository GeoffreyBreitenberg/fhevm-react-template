{
  "name": "anonymous-copyright-protection",
  "version": "1.0.0",
  "description": "Anonymous creation copyright protection with FHE on Sepolia",
  "type": "commonjs",
  "main": "index.js",
  "scripts": {
    "compile": "hardhat compile",
    "clean": "hardhat clean",
    "test": "hardhat test",
    "test:main": "hardhat test test/AnonymousCopyright.test.js",
    "test:sepolia": "hardhat test test/AnonymousCopyright.sepolia.test.js --network sepolia",
    "test:gas": "REPORT_GAS=true hardhat test",
    "test:coverage": "hardhat coverage",
    "test:watch": "hardhat watch test",
    "coverage": "hardhat coverage",
    "coverage:check": "hardhat coverage --check-coverage --statements 85 --branches 75 --functions 90 --lines 85",
    "lint": "npm run lint:sol && npm run lint:js",
    "lint:sol": "solhint 'contracts/**/*.sol'",
    "lint:js": "eslint '**/*.js'",
    "lint:fix": "npm run lint:sol:fix && npm run lint:js:fix",
    "lint:sol:fix": "solhint 'contracts/**/*.sol' --fix",
    "lint:js:fix": "eslint '**/*.js' --fix",
    "prettier": "prettier --write '**/*.{js,json,sol,md}'",
    "prettier:check": "prettier --check '**/*.{js,json,sol,md}'",
    "format": "npm run prettier && npm run lint:fix",
    "security": "npm run security:audit && npm run security:check",
    "security:audit": "node scripts/security/audit.js",
    "security:check": "npm audit --audit-level=moderate",
    "gas": "npm run gas:analysis && npm run gas:check",
    "gas:analysis": "node scripts/performance/gas-analysis.js",
    "gas:check": "npm run test:gas",
    "performance": "npm run gas:analysis",
    "pre-commit": "npm run prettier:check && npm run lint && npm run security:check",
    "pre-push": "npm run compile && npm test && npm run coverage:check",
    "commit-msg": "echo 'Commit message validated'",
    "prepare": "node -e \"try { require('husky').install() } catch (e) {}\"",
    "node": "hardhat node",
    "node:fork": "FORK_ENABLED=true hardhat node",
    "deploy": "hardhat run scripts/deploy.js --network sepolia",
    "deploy:local": "hardhat run scripts/deploy.js --network localhost",
    "deploy:hardhat": "hardhat run scripts/deploy.js --network hardhat",
    "verify": "hardhat run scripts/verify.js --network sepolia",
    "interact": "hardhat run scripts/interact.js --network sepolia",
    "interact:local": "hardhat run scripts/interact.js --network localhost",
    "simulate": "hardhat run scripts/simulate.js --network hardhat",
    "simulate:local": "hardhat run scripts/simulate.js --network localhost",
    "flatten": "hardhat flatten",
    "console": "hardhat console --network sepolia",
    "accounts": "hardhat accounts",
    "balances": "hardhat run scripts/check-balances.js",
    "ci": "npm run lint && npm run security:check && npm run compile && npm test && npm run coverage",
    "ci:full": "npm run format && npm run security && npm run compile && npm test && npm run coverage && npm run gas:analysis"
  },
  "keywords": [
    "fhe",
    "copyright",
    "privacy",
    "blockchain",
    "anonymous",
    "zama",
    "encryption",
    "intellectual-property",
    "smart-contracts",
    "ethereum",
    "sepolia"
  ],
  "author": "",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": ""
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-toolbox": "^4.0.0",
    "@nomicfoundation/hardhat-verify": "^2.0.0",
    "chai": "^4.3.10",
    "eslint": "^8.55.0",
    "hardhat": "^2.19.0",
    "hardhat-gas-reporter": "^1.0.9",
    "husky": "^8.0.3",
    "prettier": "^3.1.1",
    "prettier-plugin-solidity": "^1.2.0",
    "solhint": "^4.0.0",
    "solidity-coverage": "^0.8.5"
  },
  "dependencies": {
    "@fhevm/solidity": "^0.1.0",
    "dotenv": "^16.3.1",
    "ethers": "^6.9.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
